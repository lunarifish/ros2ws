{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "colcon build --merge-install --symlink-install --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_EXPORT_COMPILE_COMMANDS=Yes",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        },
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -r ${workspaceFolder}/build;rm -r ${workspaceFolder}/log;rm -r ${workspaceFolder}/install;",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": []
    }
  ]
}
